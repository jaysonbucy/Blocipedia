<h1> New Wiki </h1>
<div class="row">
  <div class="col-md-4">
    <%= form_for @wiki do |w| %>
      <div class="form-group">
        <%= w.label :title %>
        <%= w.text_field :title, class: 'form-control', placeholder: "Enter wiki name" %>
      </div>
      <div class="form-group">
        <%= w.label :body %>
        <%= w.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki information" %>
      </div>
      <% if current_user.premium? || current_user.admin? %>
        <div class="form-group">
          <%= w.label :private, class: 'checkbox' do %>
            <%= w.check_box :private %> Private wiki entry
          <% end %>
        </div>
      <% end %>
      <%= w.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
