<h1> New Wiki </h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |w| %>
      <div class="form-group">
        <%= w.label :title %>
        <%= w.text_field :title, class: 'form-control', placeholder: "Enter wiki name" %>
      </div>
      <div class="form-group">
        <%= w.label :body %>
        <%= w.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter wiki information" %>
      </div>
      <div class="form-group">
        <%= w.label :private, class: 'checkbox' do %>
          <%= w.check_box :private %> Private wiki
        <% end %>
      </div>
      <%= w.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
